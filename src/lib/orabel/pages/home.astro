---

<Layout footerClass="mt-0" htmlClass="rts-light-mood">
  <Fragment slot="head">
    <Stylesheets />
  </Fragment>

  <Fragment slot="body">
    <div class="orb-wrapper">
      <!-- page loader end -->
      <div id="orb-dynamic-content" class="transition-fade">
        <div class="orb-page-frame orb-home-4">
          <div class="orb-content">
            <div class="orb-grid">
              <div class="orb-g-25 orb-sm-100">
                <div class="orb-position-fix">
                  <div class="orb-photo-frame orb-obj-1">
                    <img
                      src="https://res.cloudinary.com/daoju0r3c/image/upload/v1746092710/3._Or_kaq5vd.jpg"
                      alt="photo"
                    />
                  </div>
                </div>
              </div>
              <div class="orb-g-50 orb-sm-100">
                <div class="orb-main-title">
                  <div class="orb-suptitle"></div>
                  <h1 class="font-normal-case font-line-normal">
                    Storyâ€™s On Skin - <br /> No <i
                      class="underline font-playfair">Subtitles</i
                    >, <br /> No <i class="underline font-playfair">Spoilers</i>
                  </h1>
                  <div class="orb-button-frame">
                    <div class="orb-btn-label"></div>
                    <a href="/journey" class="orb-sm-button">
                      <div class="orb-arrow">
                        <img src="/orabel/img/ui/arrow-2.svg" alt="arrow" />
                      </div>
                    </a>
                  </div>
                </div>
              </div>
              <div class="orb-g-25 orb-sm-100">
                <div class="orb-object-frame">
                  <div class="orb-photo-frame orb-obj-2">
                    <img
                      src="https://res.cloudinary.com/daoju0r3c/image/upload/v1745519645/IMG_6264_unsvxg.jpg"
                      alt="photo"
                    />
                  </div>
                  <div class="orb-photo-frame orb-obj-3">
                    <img
                      src="https://res.cloudinary.com/daoju0r3c/image/upload/c_fill,w_892,h_821/v1745669570/IMG_6217_hxqhc5.jpg"
                      alt="photo"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div
      class="trusted-clients-area-start rts-section-gap bg-white section-separator"
      style="margin-top: 4rem;"
    >
      <div class="right-shape-testi">
        <img
          src="/creative-mighty/assets/images/testimonials/03.png"
          alt="testimonials"
        />
      </div>
      <div class="container-full">
        <div class="row">
          <div class="col-lg-12">
            <div class="main-wrapper-case-studies scrolltext-wrapper">
              <div class="scrollingText-three">
                <h2 class="title">
                  our <span>Trusted Clients</span> Say . our <span
                    >Trusted Clients</span
                  > Say . our <span>Trusted Clients</span> Say .
                </h2>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row g-5 mt--80">
          <div class="col-lg-8 pr--100 pr_md--50 pr_sm--20">
            <div class="swiper-testimonails-style-one-main-wrapper">
              <div class="swiper mySwiper-testimonial-1">
                <div class="swiper-wrapper">
                  <!-- single tesinmonials area start -->
                  {
                    testimonials.map((element) => (
                      <TestimonialItem
                        by={element.by}
                        testimonial={element.testimonial}
                      />
                    ))
                  }
                </div>
                <div class="button-area-next-prev">
                  <div class="swiper-button-next"></div>
                  <div class="swiper-button-prev"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="after-effect-testi-right-img">
              <div class="thumbnail-clients-img rts-reveal-two">
                <img
                  class="rts-reveal-image-two"
                  src="https://res.cloudinary.com/daoju0r3c/image/upload/v1746212428/WhatsApp_Image_2025-05-02_at_1.19.31_AM_oaq4sq.jpg"
                  alt=""
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Fragment>

  <Fragment slot="scripts"><Scripts /></Fragment>
</Layout>
