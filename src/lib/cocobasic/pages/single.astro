---
import Layout from "../../creative-mighty/layout.astro";

const { image } = Astro.props;
---

<style>
  .bg-black {
    background-color: black !important;
  }

  .bg-primary {
    background-color: #0e0e0e !important;
  }

  .text-white {
    color: white !important;
  }

  .mt-0 {
    margin-top: 0 !important;
  }
</style>

<Layout bodyClass="single single-post" footerClass="mt-0">
  <Fragment slot="head">
    <title>Park - Creative Portfolio Html Template</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="description" content="Template by CocoBasic" />
    <meta name="keywords" content="HTML, CSS, JavaScript, PHP" />
    <meta name="author" content="CocoBasic" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1"
    />

    <link rel="shortcut icon" href="/cocobasic/images/favicon.ico" />
    <link
      href="https://fonts.googleapis.com/css?family=Playfair+Display:400,400i%7CLato:300,300i,400,400i,700,700i,900%7CMontserrat:900"
      rel="stylesheet"
      type="text/css"
    />
    <link rel="stylesheet" type="text/css" href="/cocobasic/css/clear.css" />
    <link rel="stylesheet" type="text/css" href="/cocobasic/css/common.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/cocobasic/css/font-awesome.min.css"
    />
    <link rel="stylesheet" type="text/css" href="/cocobasic/css/sm-clean.css" />
    <link rel="stylesheet" type="text/css" href="/cocobasic/css/slick.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/cocobasic/css/justifiedGallery.min.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="/cocobasic/css/prettyPhoto.css"
    />
    <link rel="stylesheet" type="text/css" href="/cocobasic/style.css" />
  </Fragment>

  <Fragment slot="body">
    <div class="site-wrapper" style="padding-top: 12rem;">
      <div id="content" class="site-content center-relative bg-primary">
        <article class="post">
          <div class="entry-header content-830 center-relative">
            <h1 class="entry-title text-white">
              <slot name="title" />
            </h1>
          </div>
          <div class="entry-content bg-black text-white">
            <div class="content-570 center-relative">
              <slot name="content" />
            </div>
            <div class="full-post-width content-1170 center-relative">
              <script>
                var slider1_speed = "1200";
                var slider1_auto = "true";
                var slider1_hover = "true";
                var slider1_dots = "true";
              </script>
              <div
                class="image-slider-wrapper relative"
                style="margin-top: 5rem;"
              >
                <div id="slider1" class="image-slider slider animate">
                  <div class="slick-slide">
                    <img src={image} alt="" />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </article>
      </div>
    </div>

    <!--Load JavaScript-->
    <script type="text/javascript" src="/cocobasic/js/jquery.js"></script>
    <script type="text/javascript" src="/cocobasic/js/imagesloaded.pkgd.js"
    ></script>
    <script type="text/javascript" src="/cocobasic/js/jquery.fitvids.js"
    ></script>
    <script type="text/javascript" src="/cocobasic/js/jquery.smartmenus.min.js"
    ></script>
    <script type="text/javascript" src="/cocobasic/js/isotope.pkgd.js"></script>
    <script type="text/javascript" src="/cocobasic/js/jquery.easing.1.3.js"
    ></script>
    <script
      type="text/javascript"
      src="/cocobasic/js/jquery.justifiedGallery.min.js"></script>
    <script type="text/javascript" src="/cocobasic/js/jquery.prettyPhoto.js"
    ></script>
    <script type="text/javascript" src="/cocobasic/js/slick.min.js"></script>
    <script type="text/javascript" src="/cocobasic/js/main.js"></script>
  </Fragment>
</Layout>
