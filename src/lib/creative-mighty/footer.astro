---
import clsx from "clsx";
import { navLinks } from "./header.astro";

const { classNames, styles } = Astro.props as {
  classNames: string;
  styles: string;
};
---

<style>
  .logo {
    height: 48px;
    width: auto;
  }

  .logo img {
    height: 100%;
  }
</style>

<div
  class={clsx("footer rts-footer-two-area bg-footer-2 bg_image-1", classNames)}
  style={styles}
>
  <div class="container-140">
    <div class="row">
      <div class="col-lg-12 pt--130 pt_sm--60 pb--100 pb_sm--60">
        <div class="footer-two-wrapper-content">
          <!-- footer left start -->
          <div class="footer-left-two">
            <a href="index.html" class="logo">
              <img src="/assets/dees-art-studio.png" alt="logo" />
            </a>
            <p class="disc">
              <b>Regular Hours:</b><br /> Monday–Saturday: 10 a.m.–8 p.m.,<br />
              Sunday: 11 a.m.–5 p.m. <br />
              <b>Dee's Hours</b>:<br /> Wednesday–Saturday: 12 p.m.–8 p.m.,<br
              /> Sunday: 12 p.m.–5 p.m.
            </p>
            <div class="rts-social-area-one">
              <ul>
                <li>
                  <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                </li>
                <li>
                  <a href="#"><i class="fa-brands fa-twitter"></i></a>
                </li>
                <li>
                  <a href="#"><i class="fa-brands fa-whatsapp"></i></a>
                </li>
              </ul>
            </div>
          </div>
          <!-- footer left end -->

          <!-- footer right area start -->
          <div class="footer-right-two">
            <div class="contact-information">
              <p class="title">Useful Links</p>
              <ul class="footer-nav">
                {
                  navLinks.map((element) => (
                    <li>
                      <a href={element.href} style="color: #74787c !important;">
                        {element.title}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
            <!-- contact info -->
            <div class="contact-information">
              <p class="title">Contact Info</p>
              <a href="/contact-us" class="map">
                West Edmonton Mall Address: <br /> 8882 170 St NW #1401, Edmonton,
                <br />
                AB T5T 4V4</a
              >
              <a href="#" class="mail">ink@deesartstudios.com</a>
              <a href="tel:(780) 484-4856" class="number">(780) 484-4856</a>
            </div>
            <!-- contact info end -->
            <!-- contact info -->
            <div class="contact-information input">
              <p class="title">Contact Us</p>
              <p class="map">
                Reach out to us for any inquiries. We're here to assist you <br
                />
                without overwhelming your inbox.
              </p>
              <form action="#" class="form-footer-2">
                <label for="email-1"
                  ><i class="fa-regular fa-envelope"></i></label
                >
                <input
                  id="email-1"
                  type="email"
                  placeholder="Enter your email..."
                  required
                />
                <button type="submit">Subscribe</button>
              </form>
            </div>
            <!-- contact info end -->
          </div>
          <!-- footer right area end -->
        </div>
      </div>
      <div class="col-lg-12">
        <!-- copyright-area-start -->
        <div class="copy-right-area-start-two">
          <p class="left">
            {new Date().getFullYear()} © Beyond Branding. All rights reserved.
          </p>
        </div>
        <!-- copyright-area-end -->
      </div>
    </div>
  </div>
</div>
