---
import Layout from "../layout.astro";

const { image } = Astro.props as { image: string };
---

<Layout>
  <Fragment slot="body" bodyClass="project-details">
    <!-- portfolio title area and large img area -->
    <div class="portfolio-large-img-and-top-title">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 pt--140 pt_md--80 pt_sm--60">
            <div class="title-areas-wrapper-pd pt--120 pt_md--60 pt_sm--50">
              <div class="left-area" style="margin-inline: auto;">
                <h1 class="title rts_hero__title">
                  <slot name="title" />
                </h1>
              </div>
            </div>
          </div>
        </div>
        <div class="container-140 pb--120">
          <div class="large-img grow">
            <img src={image} alt="product" />
          </div>
        </div>
      </div>
      <!-- portfolio title area and large img area end -->

      <!-- porftolio details area start -->
      <div class="rts-portfolio-details-img-bottom rts-section-gapBottom">
        <div class="container-140">
          <div class="row plr--120 plr_md--50 plr_sm--5">
            <div class="col-lg-6" style="margin-inline: auto;">
              <div class="left-pd-image-bt-content">
                <slot name="paragraphs" />
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- porftolio details area end -->
    </div>

    <!-- Mirrored from html.themewant.com/mighty/portfolio-details.html by HTTrack Website Copier/3.x [XR&CO'2014], Fri, 11 Apr 2025 15:16:56 GMT -->
  </Fragment>
</Layout>
