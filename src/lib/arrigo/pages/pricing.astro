---
import Layout from "../../creative-mighty/layout.astro";
---

<Layout>
  <Fragment slot="head">
    <link
      rel="preload"
      href="/arrigo/fonts/Linearicons-Free54e9.woff2?w118d"
      type="font/woff2"
      as="font"
      crossorigin=""
    />
    <link
      rel="preload"
      href="https://use.fontawesome.com/releases/v5.3.1/webfonts/fa-brands-400.woff2"
      type="font/woff2"
      as="font"
      crossorigin=""
    />
    <link rel="preload" href="/arrigo/js/vendor.js" as="script" />
    <link rel="preload" href="/arrigo/js/components.js" as="script" />
    <link rel="preload" href="/arrigo/css/vendor.css" as="style" />
    <link rel="preload" href="/arrigo/css/main.css" as="style" />
    <link rel="preload" href="/arrigo/fontawesome/brands.css" as="style" />
    <link rel="preload" href="/arrigo/fontawesome/fontawesome.css" as="style" />
    <!-- - Preloads -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta content="telephone=no" name="format-detection" />
    <meta name="HandheldFriendly" content="true" />
    <meta
      name="description"
      content="Arrigo – Minimal Portfolio Contemporary HTML5 Template"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Material+Icons%7CPoppins:300,300i,400,400i,600,600i%7CPlayfair+Display:400i"
    />

    <link rel="stylesheet" href="/arrigo/css/vendor.css" />
    <link rel="stylesheet" href="/arrigo/css/main.css" />
    <!-- ICONS-->
  </Fragment>

  <Fragment slot="body">
    <div class="page-wrapper">
      <section class="section section-masthead section_pt section_pb">
        <div class="container">
          <div class="row">
            <div class="col">
              <h1>Pricing</h1>
            </div>
          </div>
        </div>
        <div class="section-masthead__line"></div>
      </section>
      <!-- - section MASTHEAD -->
      <!-- - PAGE HEADER -->
      <main class="site-main">
        <!-- section PRICING -->
        <section class="section section_mt section-pricing">
          <div class="container container_25">
            <div class="row">
              <div class="col-lg-4 section-pricing__item">
                <div class="figure-pricing">
                  <div class="figure-pricing__header">
                    <div class="figure-pricing__line"></div>
                    <h3>Tattoos</h3>
                  </div>
                  <div class="figure-pricing__cost">
                    <div class="figure-pricing__amount">
                      150
                      <div
                        class="figure-pricing__cost-sign figure-pricing__cost-sign_before"
                      >
                        $
                      </div>
                    </div>
                    <div class="figure-pricing__label">starting price</div>
                  </div>
                  <ul class="figure-pricing__features">
                    <li class="figure-pricing__feature">
                      Up to 45 mins session
                    </li>
                    <li class="figure-pricing__feature">
                      $35 session fee if > 45 mins
                    </li>
                    <li class="figure-pricing__feature">
                      Great for small or quick designs
                    </li>
                    <li class="figure-pricing__feature">
                      Includes full setup, cleanup & aftercare guidance
                    </li>
                    <li class="figure-pricing__feature">
                      Suitable for individual or matching tattoos
                    </li>
                    <li class="figure-pricing__feature">
                      Consultation required for larger or custom projects
                      (please reach out 3–4 weeks in advance)
                    </li>
                  </ul>
                  <div class="figure-pricing__wrapper-button">
                    <a
                      class="button button_accent button_fullwidth"
                      href="/contact-us"><span>Book Now</span></a
                    >
                  </div>
                </div>
              </div>
              <div class="col-lg-4 section-pricing__item">
                <div class="figure-pricing figure-pricing_featured">
                  <div class="figure-pricing__header">
                    <div class="figure-pricing__line"></div>
                    <h3>Piercings</h3>
                  </div>
                  <div class="figure-pricing__cost">
                    <div class="figure-pricing__amount">
                      85
                      <div
                        class="figure-pricing__cost-sign figure-pricing__cost-sign_before"
                      >
                        $
                      </div>
                    </div>
                    <div class="figure-pricing__label">starting price</div>
                  </div>
                  <ul class="figure-pricing__features">
                    <li class="figure-pricing__feature">
                      Walk-in only (no appointments)
                    </li>
                    <li class="figure-pricing__feature">
                      Price varies by piercing area
                    </li>
                    <li class="figure-pricing__feature">
                      Jewelry change: starting from $35–$55 based on style
                    </li>
                    <li class="figure-pricing__feature">
                      Quick consult included before each service
                    </li>
                  </ul>
                  <div class="figure-pricing__wrapper-button">
                    <a
                      class="button button_accent button_fullwidth"
                      href="/contact-us"><span>Book Now</span></a
                    >
                  </div>
                </div>
              </div>
              <div class="col-lg-4 section-pricing__item">
                <div class="figure-pricing">
                  <div class="figure-pricing__header">
                    <div class="figure-pricing__line"></div>
                    <h3>Flash Tattoos</h3>
                  </div>
                  <div class="figure-pricing__cost">
                    <div class="figure-pricing__amount">
                      100-200
                      <div
                        class="figure-pricing__cost-sign figure-pricing__cost-sign_before"
                      >
                        $
                      </div>
                    </div>
                  </div>
                  <ul class="figure-pricing__features">
                    <li class="figure-pricing__feature">
                      Limited drops — posted when time allows
                    </li>
                    <li class="figure-pricing__feature">
                      Prices based on size, style, and detail
                    </li>
                    <li class="figure-pricing__feature">
                      Includes original sketches and one-off designs
                    </li>
                    <li class="figure-pricing__feature">
                      Availability and flash updates on socials
                    </li>
                  </ul>
                  <div class="figure-pricing__wrapper-button">
                    <a
                      class="button button_accent button_fullwidth"
                      href="/contact-us"><span>Book Now</span></a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- - section PRICING -->
        <!-- section CTA -->

        <!-- - section CTA -->
      </main>
      <!-- PAGE FOOTER -->

      <!-- - PAGE FOOTER -->
    </div>
  </Fragment>

  <Fragment slot="scripts">
    <script
      defer
      src="https://maps.googleapis.com/maps/api/js?callback=Function.prototype&key=AIzaSyArW7jnLU4wdvZGxBMN1jNXAq5dBxVBt4U"
    ></script>
    <!-- VENDOR SCRIPTS -->
    <script defer src="/arrigo/js/vendor.js"></script>
    <!-- - VENDOR SCRIPTS -->
    <!-- COMPONENTS -->
    <script defer src="/arrigo/js/components.js"></script>
  </Fragment>
</Layout>
