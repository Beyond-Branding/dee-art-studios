---
import Layout from "../../creative-mighty/layout.astro";
---

<Layout>
  <Fragment slot="head">
    <link
      rel="preload"
      href="/arrigo/fonts/Linearicons-Free54e9.woff2?w118d"
      type="font/woff2"
      as="font"
      crossorigin=""
    />
    <link
      rel="preload"
      href="https://use.fontawesome.com/releases/v5.3.1/webfonts/fa-brands-400.woff2"
      type="font/woff2"
      as="font"
      crossorigin=""
    />
    <link rel="preload" href="/arrigo/js/vendor.js" as="script" />
    <link rel="preload" href="/arrigo/js/components.js" as="script" />
    <link rel="preload" href="/arrigo/css/vendor.css" as="style" />
    <link rel="preload" href="/arrigo/css/main.css" as="style" />
    <link rel="preload" href="/arrigo/fontawesome/brands.css" as="style" />
    <link rel="preload" href="/arrigo/fontawesome/fontawesome.css" as="style" />
    <!-- - Preloads -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta content="telephone=no" name="format-detection" />
    <meta name="HandheldFriendly" content="true" />
    <meta
      name="description"
      content="Arrigo â€“ Minimal Portfolio Contemporary HTML5 Template"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Material+Icons%7CPoppins:300,300i,400,400i,600,600i%7CPlayfair+Display:400i"
    />

    <link rel="stylesheet" href="/arrigo/css/vendor.css" />
    <link rel="stylesheet" href="/arrigo/css/main.css" />
    <!-- ICONS-->
    <link
      rel="apple-touch-icon"
      sizes="57x57"
      href="img/content/apple-icon-57x57.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="60x60"
      href="img/content/apple-icon-60x60.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="72x72"
      href="img/content/apple-icon-72x72.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="76x76"
      href="img/content/apple-icon-76x76.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="114x114"
      href="img/content/apple-icon-114x114.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="120x120"
      href="img/content/apple-icon-120x120.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="144x144"
      href="img/content/apple-icon-144x144.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="152x152"
      href="img/content/apple-icon-152x152.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="img/content/apple-icon-180x180.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="img/content/android-icon-192x192.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="img/content/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="96x96"
      href="img/content/favicon-96x96.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="img/content/favicon-16x16.png"
    />
    <link rel="manifest" href="img/content/manifest.json" />
    <meta name="msapplication-TileColor" content="#ffffff" />
    <meta
      name="msapplication-TileImage"
      content="img/content/ms-icon-144x144.png"
    />
    <meta name="theme-color" content="#ffffff" />
    <link rel="icon" type="image/x-icon" href="img/content/favicon.ico" />
  </Fragment>

  <Fragment slot="body">
    <div class="page-wrapper">
      <!-- PAGE HEADER -->
      <!-- section MASTHEAD -->
      <section class="section section-masthead section_pt section_pb">
        <div class="container">
          <div class="row">
            <div class="col">
              <h1>Pricing</h1>
            </div>
          </div>
        </div>
        <div class="section-masthead__line"></div>
      </section>
      <!-- - section MASTHEAD -->
      <!-- - PAGE HEADER -->
      <main class="site-main">
        <!-- section PRICING -->
        <section class="section section_mt section-pricing">
          <div class="container container_25">
            <div class="row">
              <div class="col-lg-4 section-pricing__item">
                <div class="figure-pricing">
                  <div class="figure-pricing__header">
                    <div class="figure-pricing__line"></div>
                    <h3>Studio</h3>
                  </div>
                  <div class="figure-pricing__cost">
                    <div class="figure-pricing__amount">
                      170
                      <div
                        class="figure-pricing__cost-sign figure-pricing__cost-sign_before"
                      >
                        $
                      </div>
                    </div>
                    <div class="figure-pricing__label">per hour</div>
                  </div>
                  <ul class="figure-pricing__features">
                    <li class="figure-pricing__feature">Single Project</li>
                    <li class="figure-pricing__feature">1 Collaborator</li>
                    <li class="figure-pricing__feature">100 Mb in Cloud</li>
                    <li class="figure-pricing__feature">1 Integration</li>
                  </ul>
                  <div class="figure-pricing__wrapper-button">
                    <a class="button button_accent button_fullwidth" href="#"
                      ><span>Book Now</span></a
                    >
                  </div>
                </div>
              </div>
              <div class="col-lg-4 section-pricing__item">
                <div class="figure-pricing figure-pricing_featured">
                  <div class="figure-pricing__header">
                    <div class="figure-pricing__line"></div>
                    <h3>Fashion</h3>
                  </div>
                  <div class="figure-pricing__cost">
                    <div class="figure-pricing__amount">
                      325
                      <div
                        class="figure-pricing__cost-sign figure-pricing__cost-sign_before"
                      >
                        $
                      </div>
                    </div>
                    <div class="figure-pricing__label">per hour</div>
                  </div>
                  <ul class="figure-pricing__features">
                    <li class="figure-pricing__feature">5 Projects</li>
                    <li class="figure-pricing__feature">5 Collaborators</li>
                    <li class="figure-pricing__feature">10 Gb in Cloud</li>
                    <li class="figure-pricing__feature">5 Integrations</li>
                    <li class="figure-pricing__feature">Priority Support</li>
                  </ul>
                  <div class="figure-pricing__wrapper-button">
                    <a class="button button_accent button_fullwidth" href="#"
                      ><span>Book Now</span></a
                    >
                  </div>
                </div>
              </div>
              <div class="col-lg-4 section-pricing__item">
                <div class="figure-pricing">
                  <div class="figure-pricing__header">
                    <div class="figure-pricing__line"></div>
                    <h3>Wedding</h3>
                  </div>
                  <div class="figure-pricing__cost">
                    <div class="figure-pricing__amount">
                      2000
                      <div
                        class="figure-pricing__cost-sign figure-pricing__cost-sign_before"
                      >
                        $
                      </div>
                    </div>
                    <div class="figure-pricing__label">per day</div>
                  </div>
                  <ul class="figure-pricing__features">
                    <li class="figure-pricing__feature">Unlimited Projects</li>
                    <li class="figure-pricing__feature">20 Collaborators</li>
                    <li class="figure-pricing__feature">50 Gb in Cloud</li>
                    <li class="figure-pricing__feature">
                      Unlimited Integrations
                    </li>
                    <li class="figure-pricing__feature">Priority Support</li>
                    <li class="figure-pricing__feature">Reports</li>
                  </ul>
                  <div class="figure-pricing__wrapper-button">
                    <a class="button button_accent button_fullwidth" href="#"
                      ><span>Book Now</span></a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- - section PRICING -->
        <!-- section CTA -->
        <div class="container-fluid">
          <section class="section section-cta section_pt section_pb">
            <div
              class="jarallax offset-lg-6 col-lg-6 section-cta__bg"
              data-jarallax="true"
              data-speed="0.9"
              data-img-size="contain"
            >
              <img
                class="jarallax-img of-contain"
                src="/arrigo/img/assets/sectionCTA/bg-3.jpg"
                width="960"
                height="925"
                loading="lazy"
                alt=""
              />
            </div>
            <div class="container">
              <div class="row align-items-center">
                <div class="col-lg-6">
                  <header class="section-cta__header">
                    <h2>Got an interesting project to work on?</h2>
                    <h4>I can help you with it. Let's talk!</h4>
                  </header>
                  <div class="section-cta__wrapper-button">
                    <a class="button button_accent" href="#"
                      ><span>Get a FREE Quote</span></a
                    >
                  </div>
                </div>
              </div>
            </div>
            <div class="section-cta__decor-el-1 d-none d-lg-block"></div>
            <div class="overlay overlay_white d-lg-none"></div>
          </section>
        </div>
        <!-- - section CTA -->
      </main>
      <!-- PAGE FOOTER -->

      <!-- - PAGE FOOTER -->
    </div>
  </Fragment>

  <Fragment slot="scripts">
    <script
      defer
      src="https://maps.googleapis.com/maps/api/js?callback=Function.prototype&key=AIzaSyArW7jnLU4wdvZGxBMN1jNXAq5dBxVBt4U"
    ></script>
    <!-- VENDOR SCRIPTS -->
    <script defer src="/arrigo/js/vendor.js"></script>
    <!-- - VENDOR SCRIPTS -->
    <!-- COMPONENTS -->
    <script defer src="/arrigo/js/components.js"></script>
  </Fragment>
</Layout>
